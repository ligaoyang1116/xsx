<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".loging.LoginActivity">
    <EditText
        android:id="@+id/log_username_et"
        android:layout_width="match_parent"
        android:background="#FFC6C3C4"
        android:layout_height="60dp"
        android:text="@string/UserName"/>
    <EditText
        android:id="@+id/log_paswd_et"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#FFC6C3C4"
        android:layout_height="60dp"
        android:text="@string/Pswd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/log_login_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"/>
        <Button
            android:id="@+id/log_resgin_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resgin"/>
    </LinearLayout>
</LinearLayout>